{
    "name": "hexlet/code",
    "description": "Generate diff between two configuration files",
    "version": "0.1.0",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hexlet\\Code\\": "src/"
        },
        "files": [
            "src/Differ.php",
            "src/Parser.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Differ\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Elena Manukyan",
            "email": "utv.header@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "docopt/docopt": "^1.0",
        "lstrojny/functional-php": "^1.17",
        "symfony/yaml": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 src",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --coverage-clover build/logs/clover.xml"
    },
    "bin": [
        "gendiff"
    ]
}
